# ===================================================================
# Django Configuration
# ===================================================================
SECRET_KEY=your-secret-key-here-CHANGE-IN-PRODUCTION
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,[::1]

# CSRF trusted origins (required for production webhooks with HTTPS)
# Leave empty for development (localhost doesn't need this)
# For production, list your domains with protocol (https://)
CSRF_TRUSTED_ORIGINS=
# Example for production:
# CSRF_TRUSTED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ===================================================================
# Database Configuration
# ===================================================================
# For development (SQLite):
DATABASE_URL=sqlite:///db.sqlite3
# For production (PostgreSQL):
# DATABASE_URL=postgresql://user:password@localhost:5432/habit_reward

# ===================================================================
# Airtable Configuration (kept for fallback)
# ===================================================================
AIRTABLE_API_KEY=your_airtable_api_key_here
AIRTABLE_BASE_ID=your_airtable_base_id_here

# ===================================================================
# Telegram Bot Configuration
# ===================================================================
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
# Webhook URL (for production deployment with ASGI server)
# Leave empty for development (uses polling mode)
TELEGRAM_WEBHOOK_URL=
# Example for production:
# TELEGRAM_WEBHOOK_URL=https://yourdomain.com/webhook/telegram

# ===================================================================
# LLM Configuration
# ===================================================================
LLM_PROVIDER=openai
LLM_MODEL=gpt-3.5-turbo
LLM_API_KEY=your-openai-api-key-here
# For other providers:
# LLM_PROVIDER=anthropic
# LLM_MODEL=claude-3-sonnet-20240229

# ===================================================================
# Optional: Default User Configuration
# ===================================================================
DEFAULT_USER_TELEGRAM_ID=your_telegram_id_here

# ===================================================================
# Gamification Configuration
# ===================================================================
STREAK_MULTIPLIER_RATE=0.1
PROGRESS_BAR_LENGTH=10
RECENT_LOGS_LIMIT=10

# ===================================================================
# Logging Configuration
# ===================================================================
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# ===================================================================
# Internationalization Configuration
# ===================================================================
SUPPORTED_LANGUAGES=en,ru,kk
DEFAULT_LANGUAGE=en
