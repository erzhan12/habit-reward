# Habit Reward Bot - Production Configuration
# Server: DigitalOcean (206.189.40.240)
# Domain: habitreward.org

# ===== Django Configuration =====
# Generate new secret key with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=CHANGE_THIS_TO_SECURE_SECRET_KEY
DEBUG=False
ALLOWED_HOSTS=habitreward.org,www.habitreward.org
CSRF_TRUSTED_ORIGINS=https://habitreward.org,https://www.habitreward.org

# ===== Database Configuration =====
# Using SQLite for simplicity (stored in persistent volume)
DATABASE_URL=sqlite:////app/data/db.sqlite3

# ===== Telegram Bot Configuration =====
TELEGRAM_BOT_TOKEN=YOUR_TELEGRAM_BOT_TOKEN_HERE
TELEGRAM_WEBHOOK_URL=https://habitreward.org/webhook/telegram

# ===== Django Superuser (Auto-created on first run) =====
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=erzhan.sarsenov@gmail.com
DJANGO_SUPERUSER_PASSWORD=CHANGE_THIS_TO_STRONG_PASSWORD

# ===== Docker Configuration =====
DOCKER_REGISTRY=ghcr.io
DOCKER_IMAGE_NAME=erzhan12/habit-reward
IMAGE_TAG=latest

# ===== Domain Configuration =====
DOMAIN=habitreward.org

# ===== Optional: AI/LLM Configuration =====
LLM_PROVIDER=openai
LLM_MODEL=gpt-3.5-turbo
LLM_API_KEY=

# ===== Application Settings =====
LOG_LEVEL=INFO
SUPPORTED_LANGUAGES=en,ru,kk
STREAK_MULTIPLIER_RATE=0.1
